.datagrid table tbody td:first-child { border-left: none; }
.datagrid table tbody tr:last-child td { border-bottom: none; }

.subtotal {width:34%; float:right; margin-bottom: 10px;}
.subtotal table {width:101%}
.subtotal table thead tr th:nth-child(1),
.subtotal table thead tr th:nth-child(2) { width: 50%; text-align: right;}

.subtotal table tbody tr td:nth-child(1),
.subtotal table tbody tr td:nth-child(2) {text-align: right;}

