.section2 td { border-bottom: 0px solid #BBBBBB;font-size: 12px;line-height: 14px;padding: 10px;}
.section2 th.group {background-color: #666; color: #ffffff; height: 20px;font-size: 12px;font-weight: normal;}

/* Section #3 MRC & NRC = Datagrid
================================================== */
.section3 h5 {margin-bottom: 10px;}
.datagrid table thead tr th:nth-child(1) { width: 4%; }
.datagrid table thead tr th:nth-child(2) { width: 13%; }
.datagrid table thead tr th:nth-child(3) { width: 44%; }
.datagrid table thead tr th:nth-child(4) { width: 8%; }
.datagrid table thead tr th:nth-child(5) { width: 8%; }
