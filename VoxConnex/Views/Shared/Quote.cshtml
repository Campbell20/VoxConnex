.datagrid table td, .datagrid table th { padding: 3px 5px; }
.datagrid table thead th {background-color:#000000; color:#FFFFFF; font-size: 12px; font-weight: normal; border-left: 1px solid #0070A8;  }
.datagrid table thead th:first-child { border: none; }
