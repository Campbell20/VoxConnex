        <!-- Section #2 - MRC & NRC
        ================================================== -->
        <article class="section3">
            <h5>Monthly Recurring Charges (MRC)</h5>
            <div class="datagrid">
                <table>
                    <thead>
                        <tr>
                            <th>QTY</th>
                            <th>Item ID</th>
                            <th>Description</th>
                            <th>Monthly</th>
                            <th>Tax</th>
                            <th nowrap>Monthly Ext.</th>
                        </tr>
                    </thead>
                    <tbody>
                        {foreach from=$item_list key=key item=item}
                        {if $item.is_recurring &&  '' == $item.parent_id}
                        <tr>
                            <td>{$item.quantity}</td>
                            <td>{$item.item_number}</td>
                            <td>{$item.title}<br />{$item.description}</td>
                            <td class="txt-right"><span data-prefix>$</span>{$item.price}</td>
                            <td>{$item.tax}</td>
                            <td class="txt-right"><span data-prefix>$</span>{$item.expanded_price}</td>
                        </tr>
                        <!-- bundle children -->
                        {foreach from=$item.children key=child_key item=child}
                        <tr>
                            <td></td>
                            <td></td>
                            <td>{$child.quantity} X {$child.item_number} - {$child.description}</td>
                            <td class="txt-right"><span data-prefix></span></td>
                            <td></td>
                            <td class="txt-right"><span data-prefix></span></td>
                        </tr>
                        {/foreach}
                        {/if}
                        {/foreach}
                    </tbody>
                </table>
